<section class="py-40 px-6 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-gray-900 text-center mb-4">
      Made for how you work
    </h2>
    <p class="text-xl text-gray-600 text-center mb-12">
      No matter what you build.
    </p>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Indie Makers & Coders -->
      <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-8 rounded-xl shadow-lg">
        <div class="text-5xl mb-4">👨‍💻</div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Indie Makers & Coders</h3>
        <ul class="space-y-3 text-gray-700">
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">•</span>
            <span>Organize ideas, meeting notes, and project logs</span>
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">•</span>
            <span>Manage side projects, experiments, or MVPs</span>
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">•</span>
            <span>Patterns: Coding projects, time tracking, learning code</span>
          </li>
        </ul>
      </div>

      <!-- Creators & Writers -->
      <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-8 rounded-xl shadow-lg">
        <div class="text-5xl mb-4">📬</div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Creators & Writers</h3>
        <ul class="space-y-3 text-gray-700">
          <li class="flex items-start">
            <span class="text-purple-600 mr-2">•</span>
            <span>Manage your newsletter workflow or content calendar</span>
          </li>
          <li class="flex items-start">
            <span class="text-purple-600 mr-2">•</span>
            <span>Draft ideas, plan social posts, and track engagement</span>
          </li>
          <li class="flex items-start">
            <span class="text-purple-600 mr-2">•</span>
            <span>Patterns: Newsletter writing, social media posting</span>
          </li>
        </ul>
      </div>

      <!-- Learners & Knowledge Workers -->
      <div class="bg-gradient-to-br from-green-50 to-green-100 p-8 rounded-xl shadow-lg">
        <div class="text-5xl mb-4">📚</div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Learners & Knowledge Workers</h3>
        <ul class="space-y-3 text-gray-700">
          <li class="flex items-start">
            <span class="text-green-600 mr-2">•</span>
            <span>Store everything you read, link your insights, and retrieve them fast</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-600 mr-2">•</span>
            <span>Patterns: Bibliography + Knowledge + Drafts</span>
          </li>
        </ul>
      </div>

      <!-- Managers & Organizers -->
      <div class="bg-gradient-to-br from-orange-50 to-orange-100 p-8 rounded-xl shadow-lg">
        <div class="text-5xl mb-4">🧠</div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Managers & Organizers</h3>
        <ul class="space-y-3 text-gray-700">
          <li class="flex items-start">
            <span class="text-orange-600 mr-2">•</span>
            <span>Keep track of contacts, meeting notes, and ongoing tasks</span>
          </li>
          <li class="flex items-start">
            <span class="text-orange-600 mr-2">•</span>
            <span>Use it as a lightweight CRM or personal project system</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

