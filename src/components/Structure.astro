<section class="py-40 px-6 bg-gradient-to-br from-indigo-50 to-purple-50">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-gray-900 text-center mb-12">
      All your notes, finally connected.
    </h2>

    <div class="bg-white rounded-xl shadow-2xl p-8 md:p-12 mb-8">
      <div class="grid md:grid-cols-2 gap-6">
        <div class="flex items-start space-x-3 p-4 bg-blue-50 rounded-lg">
          <span class="text-3xl">📓</span>
          <div>
            <h3 class="font-bold text-gray-900 mb-1">Meeting Notes</h3>
            <p class="text-sm text-gray-600">Linked to contacts & projects</p>
          </div>
        </div>

        <div class="flex items-start space-x-3 p-4 bg-purple-50 rounded-lg">
          <span class="text-3xl">📚</span>
          <div>
            <h3 class="font-bold text-gray-900 mb-1">Bibliography Notes</h3>
            <p class="text-sm text-gray-600">Source material</p>
          </div>
        </div>

        <div class="flex items-start space-x-3 p-4 bg-green-50 rounded-lg">
          <span class="text-3xl">💡</span>
          <div>
            <h3 class="font-bold text-gray-900 mb-1">Knowledge Notes</h3>
            <p class="text-sm text-gray-600">Your insights</p>
          </div>
        </div>

        <div class="flex items-start space-x-3 p-4 bg-yellow-50 rounded-lg">
          <span class="text-3xl">👥</span>
          <div>
            <h3 class="font-bold text-gray-900 mb-1">Contacts</h3>
            <p class="text-sm text-gray-600">People you meet</p>
          </div>
        </div>

        <div class="flex items-start space-x-3 p-4 bg-red-50 rounded-lg">
          <span class="text-3xl">🧱</span>
